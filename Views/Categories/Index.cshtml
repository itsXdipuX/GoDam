@model IEnumerable<GoDam.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/layout.cshtml";
}

<div class="container-fluid">
    <h1 class="text-black-50">Categories</h1>

    <p style="padding:14px; margin-left:-9px;">
        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Add Category</a>
    </p>
    <div class="col-lg-5" style="padding:36px; left:172px;">

    <table class="table table-bordered table-striped table-responsive-md">
        <thead class="thead-dark">
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.CategoryID" class="btn btn-primary btn-circle btn-sm"><i class="fas fa-edit"></i></a> |
                        <a asp-action="Details" asp-route-id="@item.CategoryID" class="btn btn-info btn-circle btn-sm"><i class="fas fa-info-circle"></i></a> |
                        <a asp-action="Delete" asp-route-id="@item.CategoryID" class="btn btn-danger btn-circle btn-sm"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
        </div>
    
</div>