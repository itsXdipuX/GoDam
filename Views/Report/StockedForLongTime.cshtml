@model IEnumerable<GoDam.Models.Product>

@{ ViewData["Title"] = "StockedForLongTime";
    Layout = "~/Views/Shared/layout.cshtml";
}

<div class="container-fluid">
<h4>Items Stocked For Long Time</h4>

<table class="table table-hover table-bordered table-striped" style="width:42%;">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cat)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ProductName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CategoryID)
    </td>
    <td class="text-center">

        <a href="../Products/Delete/@item.ProductID" class="btn btn-danger btn-circle btn-sm"><i class="fas fa-trash"></i></a>
    </td>
</tr>}
    </tbody>
</table>
    </div>
