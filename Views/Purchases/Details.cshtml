@model GoDam.ViewModel.PurchaseViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/layout.cshtml";
}
<div class="container-fluid">
    <h1>Details</h1>

    <div>
        <h4>Purchase</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Bill Number
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Purchase.BillNumber)
            </dd>
            <dt class="col-sm-2">
                Vendor Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Purchase.VendorName)
            </dd>
            <dt class="col-sm-2">
                Vendor Address
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Purchase.VendorAddress)
            </dd>
            <dt class="col-sm-2">
                Purchase Date
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Purchase.PurchaseDate)
            </dd>
        </dl>
        <h4>Items purchased</h4>
        <table class="table table-hover table-bordered table-striped">
            <thead class="thead-dark text-white">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ListPurchaseDetails[0].ProductID)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.ListPurchaseDetails[0].Prod.ProductName)
                    </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.ListPurchaseDetails[0].Quantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ListPurchaseDetails[0].Amount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ListPurchaseDetails[0].LineTotal)
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ListPurchaseDetails)
                {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductID)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Prod.ProductName)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LineTotal)
        </td>
    </tr>            }
            </tbody>
        </table>
    </div>
    <div>
        @*<a asp-action="Edit" asp-route-id="@Model.Purchase.PurchaseID">Edit</a> |*@
        <a asp-action="Index">Back to List</a>
    </div>
</div>