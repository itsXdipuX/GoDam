@model GoDam.Models.Purchase

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/layout.cshtml";
}

<div class="container-fluid">
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Purchase</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Bill Number
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BillNumber)
            </dd>
            <dt class="col-sm-2">
                Vendor Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.VendorName)
            </dd>
            <dt class="col-sm-2">
                Vendor Address
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.VendorAddress)
            </dd>
            <dt class="col-sm-2">
                Purchase Date 
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PurchaseDate)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="PurchaseID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>