@model GoDam.ViewModel.SalesViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/layout.cshtml";
}

<div class="container-fluid">
    <h1>Details</h1>

    <div>
        <h4>Sales</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Bill Number
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Sales.BillNumber)
            </dd>
            <dt class="col-sm-2">
                Sales Date
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Sales.SalesDate)
            </dd>
            <dt class="col-sm-2">
                Customer Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Sales.Cust.Name)
            </dd>
        </dl>
        <h4>Items Sold</h4>
        <table class="table table-hover table-bordered table-striped">
            <thead class="bg-info text-white">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ListSalesDetails[0].ProductID)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.ListSalesDetails[0].Produc.ProductName)
                    </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.ListSalesDetails[0].Quantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ListSalesDetails[0].Price)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.ListPurchaseDetails[0].LineTotal)
                    </th>*@

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ListSalesDetails)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductID)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.Produc.ProductName)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.LineTotal)
                        </td>*@
                    </tr>
   }
            </tbody>
        </table>
    </div>
    <div>
        @*<a asp-action="Edit" asp-route-id="@Model.SalesID">Edit</a> |*@
        <a asp-action="Index">Back to List</a>
    </div>
</div>