@model IEnumerable<GoDam.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/layout.cshtml";
}

<div class="container-fluid">
    <h1>Users</h1>

    <p>
        <a href="/Identity/Account/Register">Create New</a>
    </p>
    <table class="table table-bordered table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Role)
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-circle btn-sm"><i class="fas fa-edit"></i></a> |
                    <a asp-action="ChangePass" asp-route-id="@item.Id">Change Password</a>
                    @*<a asp-action="Delete" asp-route-id="@item.ProductID">Delete</a>*@
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>