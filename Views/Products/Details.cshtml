@model GoDam.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/layout.cshtml";
}

<div class="container-fluid">
    <h1>Details</h1>

    <div>
        <h4>Product</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Product Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductName)
            </dd>
            <dt class="col-sm-2">
                Manufacture Date
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MFDate)
            </dd>
            <dt class="col-sm-2">
                Expiry Date
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ExpDate)
            </dd>
            <dt class="col-sm-2">
                Category Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cat.CategoryName)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ProductID">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>